<% content_for :title, ["Frameworks search", @query].compact.join(": ") %>

<%= render partial: "search", locals: { query: @query } %>

<div class="mt-3">
  <% if @query.present? %>
    <%=
      render partial: "results", locals: {
        search: @search,
      }
    %>
  <% else %>
    <%= render partial: "no_query" %>
  <% end %>
</div>
