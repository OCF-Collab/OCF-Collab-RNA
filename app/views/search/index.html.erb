<% content_for :title, ["Competency Explorer"].compact.join(": ") %>

<div class="card">
  <div class="card-body">
    <%= render "form", competency_query: @competency_query, container_query: @container_query %>
  </div>
</div>

<div class="mt-3">
  <% if @competency_query || @container_query %>
    <%= render "results", search: @search %>
  <% else %>
    <%= render partial: "no_query" %>
  <% end %>
</div>
